// This is your Prisma schema file
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// User roles for authorization
enum UserRole {
  ADMIN
  STAFF
  MODERATOR
}

// User status
enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  PENDING
}

// Report status
enum ReportStatus {
  NEW
  PENDING
  IN_REVIEW
  IN_INVESTIGATION
  RESOLVED
  REJECTED
  CLOSED
  SUSPENDED
}

// Priority levels
enum Priority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

// Post status
enum PostStatus {
  PUBLISHED
  DRAFT
  ARCHIVED
}

// Document status
enum DocumentStatus {
  PUBLIC
  DRAFT
  ARCHIVED
}

// Issue types for compliance reports
enum IssueType {
  CORRUPTION
  MISCONDUCT
  NEPOTISM
  OTHER
}

// User accounts for administrators and staff
model User {
  id           String     @id @default(cuid())
  email        String     @unique
  username         String?
  firstName         String?
  lastName         String?

  passwordHash String
  role         UserRole   @default(STAFF)
  status       UserStatus @default(PENDING)
  isActive     Boolean    @default(true)
  lastLoginAt  DateTime?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  // Relations
  refreshTokens   RefreshToken[]
  auditLogs       AuditLog[]
  posts           Post[]             @relation("Author")
  uploadedMedia   Media[]            @relation("Uploader")
  documents       Document[]         @relation("DocumentUploader")
  adminNotes      AdminNote[]
  assignedReports ComplianceReport[] @relation("AssignedReports")

  @@map("users")
}

// Refresh tokens for user sessions
model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("refresh_tokens")
}

// Audit logs for tracking user actions
model AuditLog {
  id          String   @id @default(cuid())
  action      String
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  entityType  String
  entityId    String
  description String?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([entityType, entityId])
  @@map("audit_logs")
}

// Media files
model Media {
  id           String   @id @default(cuid())
  url          String
  type         String
  name         String
  size         Int
  uploadedById String
  uploadedBy   User     @relation("Uploader", fields: [uploadedById], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([uploadedById])
  @@map("media")
}

// Blog posts
model Post {
  id          String     @id @default(cuid())
  title       String
  slug        String     @unique
  content     String
  excerpt     String?
  status      PostStatus @default(DRAFT)
  published   Boolean    @default(false)
  authorId    String
  author      User       @relation("Author", fields: [authorId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  publishedAt DateTime?

  @@index([authorId])
  @@map("posts")
}

// Document model for eLibrary
model Document {
  id           String         @id @default(cuid())
  title        String
  description  String?
  fileUrl      String
  fileType     String
  fileSize     Int
  status       DocumentStatus @default(DRAFT)
  uploadedById String
  uploadedBy   User           @relation("DocumentUploader", fields: [uploadedById], references: [id])
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@index([uploadedById])
  @@map("documents")
}

// Compliance reports
model ComplianceReport {
  id              String       @id @default(cuid())
  issueType       IssueType
  details         String
  status          ReportStatus @default(NEW)
  priority        Priority     @default(MEDIUM)
  location        String?
  reporterName    String?
  reporterContact String?
  isAnonymous     Boolean      @default(false)
  assignedToId    String?
  assignedTo      User?        @relation("AssignedReports", fields: [assignedToId], references: [id])
  resolutionNotes String?
  submittedAt     DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  resolvedAt      DateTime?
  adminNotes      AdminNote[]

  @@index([issueType])
  @@index([status])
  @@index([assignedToId])
  @@index([submittedAt])
  @@map("compliance_reports")
}

// Admin notes
model AdminNote {
  id      String @id @default(cuid())
  content String

  // Relations: Note links to a User and a Report
  reportId String
  report   ComplianceReport @relation(fields: [reportId], references: [id])

  authorId String
  author   User   @relation(fields: [authorId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
